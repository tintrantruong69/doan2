<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Shop Sữa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:lightpink;">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Images/logo.jpg" width="30" height="30" class="d-inline-block align-top" alt="" />
                Shop Sữa
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Bán chạy nhất</a>
                    </li>
                    @if (Session["MaNhanVien"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Home","Areas")">Đăng nhập quản lý</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Session["HoTenNhanVien"].ToString()
                                @if (Convert.ToInt32(Session["Quyen"]) == 1)
                                {
                                    <span>(Quản lý)</span>
                                }
                                else
                                {
                                    <span>(Nhân viên)</span>
                                }
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @if (Convert.ToInt32(Session["Quyen"]) == 1)
                                {
                                    <a class="dropdown-item" href="@Url.Action("Index", "LoaiSua")">Loại sữa</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "HangSX")">Hãng sản xuất</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "NhanVien")">Nhân viên</a>
                                }
                          

                                <a class="dropdown-item" href="@Url.Action("Index", "KhachHang")">Khách hàng</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Index", "Sua")">Sữa</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "DatHang")">Đặt hàng</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "DatHang_ChiTiet")">Đặt hàng chi tiết</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "ThuKho")">Thủ kho</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("ChangePassword", "Home")">Đổi mật khẩu</a>
                                <a class="dropdown-item" href="@Url.Action("Logout", "NhanVien")">Đăng xuất</a>
                            </div>
                        </li>
                    }
                </ul>
                <form class="form-inline my-2 my-lg-0" action="@Url.Action("Search","Home")" method="post">
                    <input class="form-control mr-sm-2" type="search" name="TuKhoa" placeholder="Bạn muốn tìm gì?" />
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit"> Tìm kiếm <i class="fas fa-search"></i></button>
                </form>
            </div>
        </nav>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Bản quyền @DateTime.Now.Year bởi Nhóm đồ án_2.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>