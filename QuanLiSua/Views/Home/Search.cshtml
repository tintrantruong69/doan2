@model IEnumerable<QuanLiSua.Models.Sua>
@{
    ViewBag.Title = "Trang chủ";
}

<div class="card mt-3">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <div class="card-deck">
            @foreach (var item in Model)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                    <div class="card list-books h-100">
                        <img src="~/@item.AnhMau" class="card-img-top" alt="...">
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.TenSua</h5>
                            <p class="card-text">@item.DonGia VNĐ</p>
                        </div>
                        <div class="card-footer m-auto">
                            <a href="@Url.Action("ThemVaoGio","GioHang", new { maSP= item.ID})" class="btn btn-danger">Giỏ hàng</a>
                            <a href="@Url.Action("ChiTiet","Home", new { ID = item.ID})" class="btn btn-info">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>