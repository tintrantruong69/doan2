@model QuanLiSua.Models.ChangePassword

@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="card mt-3">
    <h5 class="card-header" style="background-color: #f4e0fc">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            if (Session["MaKhachHang"] == null)
            {
                <span>Vui lòng đăng nhập</span>

            }
            else
            {
                if (ViewData.ModelState["ChangePassword"] != null && ViewData.ModelState["ChangePassword"].Errors != null && !String.IsNullOrEmpty(ViewData.ModelState["ChangePassword"].Errors[0].ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <span class="d-block text-danger">@ViewData.ModelState["ChangechangeError"].Errors[0].ErrorMessage</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                if (ViewData.ModelState["ChangePasswordSucess"] != null && ViewData.ModelState["ChangePasswordSucess"].Errors != null && !String.IsNullOrEmpty(ViewData.ModelState["ChangePasswordSucess"].Errors[0].ErrorMessage))
                {
                    <span class="d-block text-success">@ViewData.ModelState["ChangePasswordSucess"].Errors[0].ErrorMessage</span>
                }

                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhauCu)
                    @Html.EditorFor(model => model.MatKhauCu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhauCu, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhauMoi)
                    @Html.EditorFor(model => model.MatKhauMoi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhauMoi, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.XacNhanMatKhau)
                    @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="Đổi mật khẩu" class="btn btn-success" />
                    <a href=""></a>
                    hoặc @Html.ActionLink("Quay về trang chủ", "Index", "Home")
                </div>
            }

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}